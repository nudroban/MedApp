<div class="center jumbotron">
  <h1>Welcome to the MedApp</h1>
  <h2>
    This application is created for finding the right doctor and online appointment
  </h2>
  <% if user_signed_in? %>
    <span>Welcome, <%= current_user.phone %></span>
    <h2><%= link_to "Recomendations", recomendations_url %></h2>
      <%= button_to "Logout", destroy_user_session_path, :method => :delete, class: "btn btn-lg btn-primary" %>
  <% else %>
    <%= link_to 'Sign in', new_user_registration_path, class: "btn btn-lg btn-primary" %> or <%= link_to 'Log in', new_user_session_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
